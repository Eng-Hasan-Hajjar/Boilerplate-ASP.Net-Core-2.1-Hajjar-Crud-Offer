@using boilerplateasp.Web.Models.Common.Modals
@model boilerplateasp.Web.Models.Offers.EditOfferModalViewModel
@{
    Layout = null;
}
@await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditOffer")))

<div class="modal-body">
    <form name="RoleEditForm" role="form" novalidate class="form-validation">
        <!-- <input type="hidden" name="Id" value="Model.Offer.id" />-->
       
        <input type="hidden" name="Id" value="1" />

        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="name" type="text" name="DisplayName" value="@Model.Offer.Name" required maxlength="32" minlength="2" class="validate form-control">
                        <label for="name" class="form-label">@L("Name")</label>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <textarea id="offer-comment" name="Description" class="validate form-control">@Model.Offer.Comment</textarea>
                        <label for="offer-comment" class="form-label">@L("Comment")</label>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <textarea id="offer-image" name="Description" class="validate form-control">@Model.Offer.Image</textarea>
                        <label for="offer-image" class="form-label">@L("Image")</label>
                    </div>
                </div>
            </div>
        </div>

      
    </form>
</div>

@await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")

<script src="~/view-resources/Views/Roles/_EditRoleModal.js" asp-append-version="true"></script>
